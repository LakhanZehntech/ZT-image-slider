            <property name="contentId6" type="ContentReference" filter="cms_image" default="" label="Sixth Slide Image" /> <!--drop image-->
            <property name="strTitle6" type="String" default="Welcome in Salesforce" label="Enter The Header Six" /> <!--header-->
            <property name="description6" type="String" default="Welcome in Salesforce" label="Description Six" /> <!--Description-->
            <!-- <property name="imgUrl6" type="String" default="" label="Enter Image URL Six" /> -->
